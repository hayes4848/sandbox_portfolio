<p id="notice"><%= notice %></p>

<p>
	<div class='row'>
<% if @project.pictures.any? %>
  <% @project.pictures.each do |pic| %>
    <div class='col-sm-3'>
      <div class='thumbnail'>
        <%= image_tag(pic.image.url(:medium), class: 'img-responsive img-thumbnail', alt: pic.title) %>
        <span> <%= pic.title %></span>
      </div>
    </div>
  <% end %>
<% end %>
</div>
</p>

<p>
	<%= display_tags(@project) %> 
<%= display_tools(@project) %></br>
  <b>Name:</b>
  <%= @project.name %>

</p>

<p>
  <b>Description:</b>
  <%= @project.description %>
</p>

<div class="padding">
<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>
</div>
