
<div class="row">
  <div class="col-md-6 col-md-offset-3">
	<%= simple_form_for(@project) do |f| %>
	  <%= f.error_notification %>

	  <div class="form-inputs">
	    <%= f.input :name %>
	    <%= f.input :description, input_html: {rows: 4} %>
	    <%= f.input :project_picture %>
	  </div>

	  <div class="form-actions">
	    <%= f.button :submit %>
	  </div>
	  <% end %>
	</div>
</div>

