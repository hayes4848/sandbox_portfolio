
<div class="row">
  <div class="col-md-6 col-md-offset-3">
	

	<%= simple_form_for(@project) do |f| %>
	  <%= f.error_notification %>

	  <div class="form-inputs">
	    <%= f.input :name %>
	    <%= f.input :description, input_html: {rows: 4} %>
	    
	  </div>

	  <div class="row">	
			  	<h3>Tags</h3>
			<%= f.simple_fields_for :tags do |tag| %>
				<%= render 'tag_fields', f:tag %>
			<% end %> 

			<div class='links'>
				<%= link_to_add_association 'add tag', f, :tags %>
			</div>
		</div>

		<div class="row">	
			  	<h3>Tools</h3>
			<%= f.simple_fields_for :tools do |tool| %>
				<%= render 'tool_fields', f:tool %>
			<% end %> 

			<div class='links'>
				<%= link_to_add_association 'add tool', f, :tools %>
			</div>
		</div>

		 <div class='row'>
    <h3> Pictures</h3>
      <%= f.simple_fields_for :pictures do |picture| %>
        <%= render 'picture_fields', f: picture %>
      <% end %>
    <div class='links'>
      <%= link_to_add_association 'add picture', f, :pictures %>
    </div>
  </div>

	  <div class="form-actions col-md-12">
	    <%= f.button :submit %>
	  </div>
	  <% end %>
	</div>
</div>

