<div class='page-header text-center'>
  <h1> My Projects</h1>
  <%= link_to 'New Project', new_project_path %>

</div>
<% @projects.each do |project| %>

  <div class='col-md-3 col-sm-4 col-xs-6 gutter'>
    <% if project.pictures.first %>
    <%= link_to image_tag(project.pictures.first.image.url(:medium), class: 'img-responsive'), "#", data: { toggle: 'modal', target: "#project-#{ project.id }"} %>
    <% end %>
  </div>
  <%= render 'projects/modal', project: project %>


<% end %>

