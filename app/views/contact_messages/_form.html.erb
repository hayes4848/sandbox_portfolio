
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for(@contact_message) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :email %>
        <%= f.input :subject %>
        <%= f.input :body, as: :text %>
        <%= f.input :topic, collection:[["Customer Service"],["Technical Support"],["Returns"]] %>
      </div>

      <div class="form-actions padding">
        
        <%= f.button :submit %>

      </div>
    <% end %>
  </div>
</div>
