<p>
  <h1><%= @blog.title %></h1>
  <%= display_tags(@blog) %>
</p><br/>
<p>
  <h3><%= @blog.author %></h3>
</p><br/>
<p>
  <%= @blog.body %>
</p><br/>
<p>
  <%= @blog.published_at.to_date %>
</p><br/>
<p>
  <%= @blog.featured %>
</p>

  <% @blog.comments.each do |comment| %>
  <h4>
    <%= comment.author %>
    <small> <%= time_ago_in_words(comment.created_at) + " ago" if comment.created_at %> </small>
  </h4>
  <%= simple_format(comment.message) %>
  <hr />

<% end %>
<h3> Add a Comment</h3>
  <%= render 'blogs/comments_form' %>

